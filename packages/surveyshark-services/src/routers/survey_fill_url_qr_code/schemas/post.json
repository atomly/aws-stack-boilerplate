{
  "$id": "file://packages/surveyshark-services/src/routers/survey_qr_code/schemas/post.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Survey QR Code POST request body schema.",
  "type": "object",
  "definitions": {
    "uuid": {
      "type": "string",
      "description": "UUID V4 RegExp.",
      "format": "uuid"
    },
    "url": {
      "type": "string",
      "description": "URL RegExp.",
      "pattern": "^((?:https?:\/\/)?[^./]+(?:\\.[^./]+)+(?:\/.*)?)$"
    }
  },
  "required": ["surveyId", "baseUrl"],
  "properties": {
    "surveyId": {
      "$ref": "#/definitions/uuid",
      "description": "Survey ID in UUID v4 format."
    },
    "baseUrl": {
      "$ref": "#/definitions/url",
      "description": "Base URL of the survey fill route."
    }
  }
}
